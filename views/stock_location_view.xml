<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_location_block_outgoing" model="ir.ui.view">
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <field name="usage" position="after">
                <field name="block_outgoing" invisible="usage != 'internal'" />
                <field name="block_incoming" invisible="usage != 'internal'" />
            </field>
        </field>
    </record>
</odoo>